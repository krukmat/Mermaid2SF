{
  "name": "mermaid-flow-compiler",
  "version": "1.0.0-poc",
  "description": "Compile Mermaid flowcharts to Salesforce Flow metadata",
  "main": "dist/cli/index.js",
  "bin": {
    "mermaid-flow-compile": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "cli": "node ./dist/cli/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:web": "vitest run",
    "test:web:watch": "vitest",
    "openapi:validate": "swagger-cli validate docs/openapi.yaml",
    "ci": "npm run lint && npm run format:check && npm test && npm run build",
    "compile-examples": "node scripts/compile-examples.js",
    "validate-examples": "node scripts/validate-examples.js",
    "coverage-upload": "npx codecov",
    "prepare": "husky install"
  },
  "keywords": [
    "mermaid",
    "salesforce",
    "flow",
    "compiler"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "codecov": "^3.8.3",
    "escomplex": "^2.0.0-alpha",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "jsdom": "^22.0.3",
    "lint-staged": "^14.0.0",
    "plato": "^1.7.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "vitest": "^1.5.8"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "commander": "^14.0.2",
    "js-yaml": "^4.1.0",
    "winston": "^3.18.3"
  },
  "lint-staged": {
    "*.{ts,js,md}": [
      "prettier --write",
      "eslint"
    ]
  }
}
